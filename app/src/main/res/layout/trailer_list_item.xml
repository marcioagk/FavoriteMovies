<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_icon_play_trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="#000000"
        android:src="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/tv_trailer_label"
        tools:text="@string/trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_icon_play_trailer"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_play_trailer"
        app:layout_constraintBottom_toTopOf="@+id/iv_icon_play_trailer" />

</android.support.constraint.ConstraintLayout>